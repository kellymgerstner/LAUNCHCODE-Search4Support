@using LAUNCHCODE_Search4Support.Models
@model List<Service>

<h1>Services</h1>

@if (Model.Count == 0)
{
    <p>No services yet!</p>
}
else
{
    <table class="table">
        <tr>
            <th>
                Name
            </th>
            <th>
                Provider
            </th>
            <th>
                Location
            </th>
            <th>
                Category
            </th>
        </tr>
        @foreach (var srv in Model)
        {
            <tr>
                <td>@srv.Name</td>
                <td>@srv.Provider.Name</td>
                <td>@srv.Provider.Location</td>
                <td>@srv.Category</td>
            </tr>
        }
    </table>